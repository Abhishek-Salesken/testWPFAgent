<UserControl x:Class="WPF_Agent.UserControls.RecentListItem"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:WPF_Agent.UserControls"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <StackPanel>
        <DockPanel>
            <StackPanel DockPanel.Dock="Left" VerticalAlignment="Center">
                <TextBlock x:Name="NumberCompany" Text="+91 989 898 8789" Foreground="#444" FontFamily="{StaticResource RobotoRegular}" FontSize="14" Margin="0,20,0,0" />
                <TextBlock x:Name="Time" Text="05:10 Min" Foreground="#999" FontFamily="{StaticResource RobotoRegular}" FontSize="12" Margin="0,2,0,17"/>
            </StackPanel>
            <Image Source="/Resources/Images/CallFowarding.png" Height="24" Width="24" HorizontalAlignment="Right" Cursor="Hand"/>
        </DockPanel>
        <Line  Height="0.4" HorizontalAlignment="Stretch" VerticalAlignment="Bottom" Stroke="#696969"
              X2="{Binding ActualWidth, RelativeSource={RelativeSource Self}}"
              StrokeDashArray="3 3" StrokeThickness="1" />
    </StackPanel>
</UserControl>
